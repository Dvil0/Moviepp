<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			   android:layout_width="match_parent"
			   android:layout_height="match_parent"
			   android:orientation="vertical">

	<TextView
			android:id="@+id/txtTile"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/title"
			android:textSize="20sp"
			android:textStyle="bold"
			android:paddingLeft="10dp"
	/>
	<StackView
			android:id="@+id/stkPosters"
			android:layout_width="match_parent"
			android:layout_height="270dp"
			android:rotation="-90"
			android:foregroundGravity="top"
	/>

	<HorizontalScrollView
			android:id="@+id/listBnt"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:fillViewport="true"
	>
		<LinearLayout
			  android:layout_width="wrap_content"
			  android:layout_height="wrap_content"
			  android:orientation="horizontal"
			  android:layout_marginTop="10dp">

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_popular"
					android:layout_marginLeft="15dp"/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_top"
					android:layout_marginLeft="15dp"/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_upcoming"
					android:layout_marginLeft="15dp"/>

			<Button
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/btn_last"
					android:layout_marginLeft="15dp"/>

		</LinearLayout>
	</HorizontalScrollView>
	<TextView
			android:id="@+id/txtTop"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/title_top"
			android:textSize="20sp"
			android:textStyle="bold"
			android:paddingLeft="10dp"
	/>


</LinearLayout>
